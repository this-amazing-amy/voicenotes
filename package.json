{
  "name": "audio-transcriber",
  "version": "1.0.0",
  "description": "Transcribe audio files and send to Capacities API",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "pm2-runtime start ecosystem.config.cjs",
