    "up-fetch": "^1.3.6",
    "wavefile": "^11.0.0",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.11.19",
    "@vitest/ui": "^3.2.3",
    "esbuild": "^0.25.1",
    "typescript": "^5.3.3",
    "vitest": "^3.2.3"
  },
  "bin": {
    "audio-transcribe": "audio-transcribe.js"
